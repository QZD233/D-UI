{
  "name": "@d-ui/core",
  "version": "0.0.1",
  "type": "module",
  "description": "Vue 3 组件库，基于 Element Plus 扩展",
  "main": "./dist/d-ui.umd.cjs",
  "module": "./dist/d-ui.js",
  "types": "./dist/index.d.ts",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/d-ui.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/d-ui.umd.cjs"
      }
    },
    "./style.css": "./dist/d-ui.css"
  },
  "files": [
    "dist"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "typecheck": "vue-tsc --noEmit",
    "lint": "echo 'Add ESLint when needed'",
    "clean": "rimraf dist"
  },
  "peerDependencies": {
    "vue": "^3.5.0",
    "element-plus": "^2.6.0",
    "@element-plus/icons-vue": "^2.3.0",
    "pinia": "^2.2.0",
    "@vueuse/core": "^11.0.0",
    "axios": "^1.6.0"
  },
  "dependencies": {
    "lodash-es": "^4.17.21"
  },
  "devDependencies": {
    "@element-plus/icons-vue": "^2.3.2",
    "@vueuse/core": "^11.2.0",
    "axios": "^1.7.0",
    "@tailwindcss/vite": "^4.1.0",
    "@vitejs/plugin-vue": "^5.1.0",
    "element-plus": "^2.6.0",
    "pinia": "^2.2.0",
    "rimraf": "^5.0.0",
    "sass": "^1.81.0",
    "tailwindcss": "^4.1.0",
    "typescript": "^5.6.0",
    "vite": "7.2.4",
    "vite-plugin-dts": "^3.9.0",
    "vue": "^3.5.0",
    "vue-tsc": "^2.1.0"
  }
}


